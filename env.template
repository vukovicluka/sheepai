# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/hacker-news-scraper

# AI Model Configuration
# Set USE_LOCAL_MODEL=true to use local LM Studio instead of OpenAI
USE_LOCAL_MODEL=false

# Local Model Configuration (when USE_LOCAL_MODEL=true)
# LM Studio typically runs on http://localhost:1234/v1
LM_STUDIO_BASE_URL=http://localhost:1234/v1
# Model name as it appears in LM Studio (e.g., "llama-3.2-3b-instruct", "mistral-7b-instruct")
LOCAL_MODEL_NAME=local-model

# OpenAI API Configuration (when USE_LOCAL_MODEL=false)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Cron Schedule Configuration
# Format: minute hour day month day-of-week
# Example: "0 9 * * *" runs daily at 9:00 AM
CRON_SCHEDULE=0 9 * * *

# Logging
LOG_LEVEL=info

# Optional: Run scraper immediately on startup (for testing)
RUN_ON_STARTUP=false

# Email Configuration (SMTP)
# Required for sending email notifications to users
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_NAME=CyberPulse

# Credibility Filtering Configuration
# Minimum credibility score (0-100) for default "High Confidence" filtering
# Articles below this threshold will be filtered out unless explicitly requested
MIN_CREDIBILITY_THRESHOLD=70

# Embedding Model Configuration
# Model name for local embeddings (using @xenova/transformers)
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2
# Enable semantic search (default: true)
ENABLE_SEMANTIC_SEARCH=true

